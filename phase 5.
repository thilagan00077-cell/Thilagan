    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background: url("background.jpg") no-repeat center center fixed;
        background-size: cover;
        color: #333;
      }
      nav {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 10px 20px;
        display: flex;
        gap: 15px;
      }
      nav a {
        color: white;
        text-decoration: none;
        font-weight: bold;
        cursor: pointer;
      }
      nav a:hover {
        text-decoration: underline;
      }
      .container {
        max-width: 800px;
